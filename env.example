# ==============================================================================
# PriCal Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Database (PostgreSQL)
# ------------------------------------------------------------------------------
# Recommended: Use Neon (https://neon.tech) for serverless PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require

DATABASE_URL="postgresql://user:password@host:5432/prical?sslmode=require"

# ------------------------------------------------------------------------------
# Calendly OAuth
# ------------------------------------------------------------------------------
# Get these from: https://developer.calendly.com/
# 1. Create a new OAuth application
# 2. Set redirect URI to your callback URL
# 3. Copy Client ID and Client Secret

CALENDLY_CLIENT_ID="your_calendly_client_id"
CALENDLY_CLIENT_SECRET="your_calendly_client_secret"

# Redirect URI must match exactly what's configured in Calendly
CALENDLY_REDIRECT_URI="http://localhost:3000/api/auth/calendly/callback"

# Webhook signing key for verifying Calendly webhook payloads
# Get this from Calendly when you create a webhook subscription
CALENDLY_WEBHOOK_SIGNING_KEY="your_webhook_signing_key"

# ------------------------------------------------------------------------------
# Application URLs
# ------------------------------------------------------------------------------
# Update these for production deployment

# Public-facing URL of your application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# URL for Calendly to send webhooks to
# In production, this should be your public domain
WEBHOOK_URL="http://localhost:3000/api/webhooks/calendly"

# ------------------------------------------------------------------------------
# Session Security
# ------------------------------------------------------------------------------
# Generate a secure secret: openssl rand -hex 32
# IMPORTANT: Use a unique secret for production!

SESSION_SECRET="your_session_secret_at_least_32_characters_long"

# ------------------------------------------------------------------------------
# Stripe (Payments)
# ------------------------------------------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys
# Use test keys for development, live keys for production

# API Keys
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Webhook secret for verifying Stripe webhook signatures
# Get this when you create a webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET="whsec_..."

# ------------------------------------------------------------------------------
# Stripe Price IDs
# ------------------------------------------------------------------------------
# Create products and prices in Stripe Dashboard, then copy the price IDs
# Products needed: Pro Monthly, Pro Yearly, Business Monthly, Business Yearly

STRIPE_PRICE_PRO_MONTHLY="price_..."
STRIPE_PRICE_PRO_YEARLY="price_..."
STRIPE_PRICE_BUSINESS_MONTHLY="price_..."
STRIPE_PRICE_BUSINESS_YEARLY="price_..."

# ------------------------------------------------------------------------------
# Environment
# ------------------------------------------------------------------------------
# Set to "production" for deployed environments

NODE_ENV="development"

# ==============================================================================
# Optional: Development Tools
# ==============================================================================

# Enable Prisma query logging (development only)
# DEBUG="prisma:query"

# Disable Next.js telemetry
# NEXT_TELEMETRY_DISABLED=1
